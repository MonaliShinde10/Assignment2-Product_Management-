<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-md  border-bottom box-shadow"style="color:#0F1318">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto">
                    
                    <li class="nav-item navbar-brand" style="display: flex; align-items: center; justify-content: center;">
                        <a asp-area="" asp-controller="Product" asp-action="AdminDashboard" style="color: aliceblue; text-align: center; display: block;">
                            Admin
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:aliceblue">
                            Products
                        </a>
                        <div class="dropdown-menu" aria-labelledby="adminDropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="ProductCrud" asp-action="AddProduct" >Add Product</a>
                            <a class="dropdown-item" asp-area="" asp-controller="ProductCrud" asp-action="AllProducts">View Products</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:aliceblue">
                            Users
                        </a>
                        <div class="dropdown-menu" aria-labelledby="adminDropdown" style="color:aliceblue">
                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="AddUser">Add User</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="ViewUser">View User</a>
                        </div>
                    </li>
                </ul>

                <ul class="navbar-nav">
                   
                    <li class="nav-item">
                        <form id="logoutForm" asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-link nav-link" style="color:aliceblue">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container flex-grow-1">
        @RenderBody()
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
