@model ProductManagement.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<link rel="stylesheet" href="/css/LoginStyle.css">

<style>

</style>

<div class="containerLogin" style="display:flex; align-items:center; justify-content:center; margin-top:170px;margin-left:130px;">
    <div class="login-box">
        <h2>Login</h2>
        <form asp-action="Login" method="post" class="needs-validation" novalidate autocomplete="off">
            <div class="user-box">
                <input type="text" asp-for="Email" required="" />
                <label>Email</label>
            </div>
            <div class="user-box">
                <input type="password" asp-for="Password" required="" />
                <label>Password</label>
            </div>
            <button type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Submit
            </button>
        </form>
    </div>

</div>


