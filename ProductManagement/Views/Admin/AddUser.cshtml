@model ProductManagement.Models.ViewModel.AddUserViewModel

@{
    ViewData["Title"] = "Add User";
    Layout = "_LayoutAdmin";
}

<link rel="stylesheet" href="/css/LoginStyle.css">

<div class="container">
    <div class="login-box">
        <h2>@ViewData["Title"]</h2>
        <form asp-action="AddUser" method="post" class="needs-validation" novalidate autocomplete="off">
            <div class="user-box">
                <input type="email" asp-for="Email" required="" class="form-control" />
                <label>Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="user-box">
                <input type="password" asp-for="Password" required="" class="form-control" />
                <label>Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="user-box">
                <input type="password" asp-for="ConfirmPassword" required="" class="form-control" />
                <label>Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Add User
            </button>
        </form>
    </div>
</div>
