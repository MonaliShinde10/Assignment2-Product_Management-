@model ProductManagement.Models.ViewModel.AddAdminViewModel

@{
    ViewData["Title"] = "Add Admin";
    Layout = "_LayoutSuperAdmin";
}

<link rel="stylesheet" href="/css/LoginStyle.css">

<div class="containerAddAdmin" style="display:flex; align-items:center; justify-content:center; margin-top:40px;margin-left:150px;">
    <div class="login-box">
        <div class="center-content">
            <div class="col">
                <form asp-action="AddAdmin" method="post" class="needs-validation" novalidate autocomplete="off">
                    <h2>@ViewData["Title"]</h2>

                    <div class="user-box">
                        <input type="email" asp-for="Email" required="" class="form-control" />
                        <label>Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="user-box">
                        <input type="password" asp-for="Password" required="" class="form-control" />
                        <label>Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="user-box">
                        <input type="password" asp-for="ConfirmPassword" required="" class="form-control" />
                        <label>Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info mt-3">
                            <span></span>
                            <span></span>
                            <span></span>
                            <span></span>
                            Add Admin</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
